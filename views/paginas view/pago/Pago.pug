extends ../header
block titleMenu
  title pago
block contenido
  main#Pago.container
    .row
      .col.l7.push-l3
        .card.indigo
          .card-tabs
            ul.tabs.tabs-fixed-width.indigo.tabs-transparent
              li.tab
                a.active(href="#efectivo") efectivo
              li.tab
                a.active(href="#tarjeta") tarjeta
          .card-content.grey.lighten-4
            #efectivo.row
              .card.col.l10.push-l1
                .card-content
                  form.row(action="#", method="post")
                    .input-field.col.l5
                      input.validate#Vivienda(type="text", name="")
                      label(for="Vivienda") Nombre completo
                    .input-field.col.l5 
                      input.validate#DireccionDe(type="text", name="")
                      label(for="DireccionDe") Numero de documento
                    .input-field.col.l10
                      input.validate#DireccionDe(type="text", name="")
                      label(for="DireccionDe") Correo Electronico
                      .modal-footer 
                .card-action.row
                  .col.l2.left.container
                    a#efecty(href="#", onclick="efecty()")
                      img(src="/img/icons/efecty.png", alt=" Az click Efecty").efectivo.container
                  .col.l2.push-l6.container
                    a#baloto(href="#", onclick="baloto()")
                      img(src="/img/icons/baloto.png", alt="Az Click Via Baloto").efectivo        
            #tarjeta.row 
              .card.col.l10.push-l1
                .card-content
                  form.row(action="#", method="post")
                    .input-field.col.l6
                      input.validate#Vivienda(type="text", name="")
                      label(for="Vivienda") Numero de tarjeta
                    .input-field.col.l6
                      input.validate#DireccionDe(type="date", name="")
                      label(for="DireccionDe") Fecha de vencimiento
                    .input-field.col.l6
                      input.validate#Pais(type="text", name="")
                      label(for="Pais") Pais
                    .input-field.col.l6
                      input.validate#Ciudad(type="text", name="")
                      label(for="Ciudad") Nombre y apellido
                    .input-field.col.l6
                      input.validate#codigo(type="text" name="")
                      label(for="codigo") Documento
                    .input-field.col.l6
                      input.validate#telefono(type="text" name="")
                      label(for="telefono") Codigo de seguridad (CVV)
                    
                .card-action
                  button#tarjeta(data-target="Enviar", onclick="tarjeta()").btn.modal-trigger.waves-effect.waves-green.green.accent-4 Guardar
                    i.material-icons credit_card 